@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<div class="container">
    <div class="col">
        <h1 class="text-center">Edytuj role</h1>
        <form method="post">


            <div class="card">
                <div class="card-header">
                    <h3>Dodaj lub usuń użytkowników do tej roli</h3>
                </div>
                <div class="card-body">
                    @for (int i=0; i < Model.Count; i++)
                    {
                    <div class="form-check m-1">
                        <input hidden asp-for="@Model[i].UserId" />
                        <input hidden asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>
                    }

                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-primary"/>
                    <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
                </div>
            </div>


        </form>
        
    </div>
</div>


            
