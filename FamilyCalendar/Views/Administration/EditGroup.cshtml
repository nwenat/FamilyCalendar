@model EditGroupViewModel
@{
    ViewBag.Title = "Edytuj grupę";
}
<div class="container">
    <div class="col">
        <h1 class="text-center">Edytuj grupę</h1>
        <form method="post" enctype="multipart/form-data" asp-controller="Administration" asp-action="EditGroup">
            <input asp-for="Id" hidden/>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" disabled class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Home" asp-route-uN="@User.Identity.Name" class="btn btn-primary">Cancel</a>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Użytkownicy w tej grupie:</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5>@user</h5>
                        }
                    }
                    else
                    {
                        <h5>Brak obecnie</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or remove users</a>
                </div>
            </div>
        </form>
    </div>
</div>
