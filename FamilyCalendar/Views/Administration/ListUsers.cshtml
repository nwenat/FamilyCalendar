@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "Wszyscy użytkownicy";
}

<div class="container">

    @if (Model.Any())
    {
        <div class="col">
            <h1 class="text-center">Wszyscy użytkownicy</h1>

            @foreach (var user in Model)
            {
                <div class="card">
                    <div class="card-header">
                        <h3>User id: @user.Id</h3>
                    </div>
                    <div class="card-body">
                        <h3>User: @user.UserName</h3>
                    </div>
                    <div class="card-footer">
                        <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                            <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                            <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                <span>Are you sure you want to delete?</span>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">No</a>
                            </span>
                            <span id="deleteSpan_@user.Id">
                                <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id', true)">Delete</a>
                            </span>
                        </form>
                    </div>
                </div>
                }

            </div>
    }
    else
    {
        <div class="col">
            <h1 class="text-center">Nie ma żadnych użytkowników</h1>

        </div>
    }

    <div>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Stwórz użytkownika</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}