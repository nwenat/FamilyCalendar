@model EditRoleViewModel

@{
    ViewBag.Title = "Edytuj role";
}

<div class="container">
    <div class="col">
        <h1 class="text-center">Edytuj grupę (rolę)</h1>
        <form method="post">
            <input hidden asp-for="Id" />
            <div class="card">
                <div class="card-header">
                    <h3>Id: @Model.Id</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Zmień nazwę</button>
                    <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cofnij</a>
                </div>
            </div>
            <br/>
            <div class="card">
                <div class="card-header">
                    <h3>Użytkownicy o tej roli:</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5>@user</h5>
                        }
                    }
                    else
                    {
                        <h5>Brak obecnie</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Dodaj lub usuń użytkowników</a>
                </div>
            </div>
        </form>
    </div>
</div>
