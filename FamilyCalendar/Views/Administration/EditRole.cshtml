@model EditRoleViewModel

@{
    ViewBag.Title = "Edytuj role";
}

<div class="container">
    <div class="col">
        <h1 class="text-center">Edytuj role</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" disabled class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Użytkownicy o tej roli:</h3>
                </div>
                <div class="card-body">
                    @if(Model.Users.Any())
                    {
                        foreach(var user in Model.Users)
                        {
                            <h5>@user</h5>
                        }
                    }
                    else
                    {
                        <h5>Brak obecnie</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or remove users</a>
                </div>
            </div>

        </form>
    </div>
</div>
