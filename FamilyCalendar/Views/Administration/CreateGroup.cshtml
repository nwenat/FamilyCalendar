@model CreateGruopViewModel
@{
    ViewBag.Title = "Tworzenie nowej grupy";
}
<div class="container">
    <div class="col">
        <h1 class="text-center">Tworzenie nowej grupy</h1>
        <form method="post">
            <input hidden asp-for="userName" value="@User.Identity.Name" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Utwórz grupę</button>
        </form>
    </div>
</div>
