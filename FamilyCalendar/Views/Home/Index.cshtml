@model IEnumerable<Event>

@{
    ViewBag.Title = "Twój kalendarz";
}

<div class="container-fluid" style="height:600px">
    <h2 class="text-center m-4">Twój obecny tydzień</h2>

    <div class="row">
        <div class="col-sm border border-dark rounded p-2">
            <h5 class="my-3 text-center">Poniedziałek @Model.First().To.ToString("dd/MM/yyyy")</h5>

            @foreach (var eevent in Model)
            {

                @if (@eevent.Priority == @Priority.HIGH)
                {
                    <button type="button" class="btn btn-danger btn-block text-left my-1">
                        @eevent.From.ToString("HH:mm") - @eevent.To.ToString("HH:mm") @eevent.Name
                    </button>
                }
                else if (@eevent.Priority == @Priority.MEDIUM)
                {
                    <button type="button" class="btn btn-primary btn-block text-left my-1">
                        @eevent.From.ToString("HH:mm") - @eevent.To.ToString("HH:mm") @eevent.Name
                    </button>
                }
                else if (@eevent.Priority == @Priority.LOW)
                {
                    <button type="button" class="btn btn-success btn-block text-left  my-1">
                        @eevent.From.ToString("HH:mm") - @eevent.To.ToString("HH:mm") @eevent.Name
                    </button>
                }

            }
        </div>


        <div class="col-sm">
            One of 7 columns
        </div>
        <div class="col-sm">
            One of 7 columns
        </div>
        <div class="col-sm">
            One of 7 columns
        </div>
        <div class="col-sm">
            One of 7 columns
        </div>
        <div class="col-sm">
            One of 7 columns
        </div>
        <div class="col-sm">
            One of 7 columns
        </div>
    </div>
</div>


